<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

<select id="cateSelectList">
	<![CDATA[
		select  cateNo,
			id, 
			cateName, 
			description, 
			regDate  
		from category
	]]>
</select>
<select id="getCategory" parameterType="int" resultType="CategoryVo">
	<![CDATA[
		select  cateNo,
				id, 
				cateName, 
				description, 
				regDate  
		from category 
		where cateNo = #{cateNo}
	]]>
</select>

<insert id="cateInsert" parameterType="CategoryVo">
	<![CDATA[
		insert into category 
		values(seq_category_no.nextval, #{id}, #{cateNmae}, #{description}, sysdate)
	]]>
</insert>
<delete id="cateDelete" parameterType="int">
	<![CDATA[
		delete from category 
		where cateNo = #{cateNo}
	]]>
</delete>

</mapper>